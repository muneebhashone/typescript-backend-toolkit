{
  "include": ["modules.d.ts", "**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "module": "NodeNext",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {},
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true
  }
}
